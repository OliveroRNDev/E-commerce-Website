<%- include('../includes/head.ejs') %>

<body>
    <%- include('../includes/navigation.ejs') %>
    <% if (error) { %>
    <div class="user-message user-message--error">
        <%= error %>
    </div>
    <% } %>
    <form method="POST" class="product-form" action="/admin/edit-category/<%= category._id %>" novalidate
        enctype="multipart/form-data">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="hidden" name="edit" value="<%= true %>">
        <div class="form-control">
            <label for="image">Image</label>
            <input type="file" name="image">
        </div>
        <div class="form-control">
            <label for="name">Name:</label>
            <input type="text" name="name" value="<%= oldInputs?oldInputs.name:category.name %>">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <input type="text" name="description" value="<%= oldInputs?oldInputs.description:category.description %>">
        </div>
        <button type="submit" class="btn">Update</button>
    </form>
    <%- include('../includes/end.ejs') %>