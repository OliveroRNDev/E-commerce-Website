<%- include("../includes/head.ejs") %>
<%- include("../includes/navigation.ejs") %>

<body>
    <% if(product!==null && product!==undefined) { %>
    <% console.log(product)%>
    <% if(product.sizes && product.sizes.length>0){ %>
    <div style="display: flex; flex-direction: row;">
        <% product.sizes.forEach(size=>{%>
        <form method="POST" class="product-form" action="/admin/product-size-delete/<%= product._id%>" novalidate>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="size" value="<%= size %>">
            <div style="padding:10px;">
                <input type="text" value="<%= size %>" disabled />
                <button class="btn danger">
                    Delete
                </button>
            </div>
        </form>
    </div>
    <%})%>
    <% }else{ %>
    <h1>Sizes not present!</h1>
    <%}%>
        <form method="POST" class="product-form" action="/admin/product-size/<%= product._id%>" novalidate>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div style="padding:10px;">
        <input type="text" name="size" />
        <button type="submit" class="btn">Add size</button>
    </div>
    </form>
    </form>
    <% } else { %>
    <h1>Product not present!</h1>
    <% } %>
</body>
<%- include("../includes/end.ejs") %>