<%- include("../includes/head.ejs") %>
<%- include("../includes/navigation.ejs") %>

<body>
    <% console.log(product)%>
    <form method="POST" action="/review/<%=product._id%>">
        <div style="display: flex;flex-direction: column;justify-content: center;align-items: center;">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="size" value="<%= size %>">
            <input type="hidden" name="color" value="<%= color %>">
            <input type="hidden" name="orderId" value="<%= orderId %>">
            <input type="hidden" name="isNewReview" value="<%= true %>">
            <textarea name="name" cols="40" style="margin: 10px;" placeholder="Name"></textarea>
            <textarea name="review" cols="40" style="margin: 10px;" rows="5"></textarea>
            <button type="submit" style="margin: 10px;" class="btn">Post review</button>
        </div>
    </form>
</body>
<%- include("../includes/end.ejs") %>